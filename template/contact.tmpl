{{define "contact"}}{{template "header" .}}


</head>

<body>
    <div id="cont" class="units-container bckgrnd">
        {{template "top" .}}
        <div id="main" class="units-row end">
            <div class="unit-centered unit-80 bckgrnd5" style="padding:15px 20px;">
                <div class="units-row end">
                    <nav class="breadcrumbs">
                        <ul>
                            <li><a href="/">Strona główna</a>
                            </li>
                            <li><span>Kontakt</span>
                            </li>
                        </ul>
                    </nav>
                </div>
                <div class="units-row">
                    {{if .Domain.Text}}
                    <div style="padding:20px 10px">
                        {{.Domain.TextStr}}
                    </div>
                    {{end}}
                </div>
                {{if or .Domain.Email .Domain.Telephone}}
                <div class="units-row">
                    <div class="unit-40 unit-centered bckgrnd2" style="padding: 50px 40px 60px 40px;">
                        <i class="fa fa-envelope-o fa-5x" style="position:relative;float:left;margin-right:10px;margin-top:-19px;"></i> <h2 style="color: #222;">Skontaktuj się.</h4>
						<div class="units-row end" style="margin-top: 50px;">
							<div class="unit-100" style="padding:20px">
							{{if .Domain.Email}}<a href="mailto:{{.Domain.Email}}" style="font-size:21px; margin-bottom:15px;"><button class="btn btn-red width-100">Wyślij e-mail<br/><i class="fa fa-envelope"></i> {{.Domain.Email}}</button></a>{{end}}
							</div>
							<div class="unit-100" style="padding:20px">
							{{if .Domain.Telephone}}<a href="tel:{{.Domain.Telephone}}" style="font-size:21px"><button class="btn btn-green width-100">Zadzwoń<br/><i class="fa fa-phone"></i> {{.Domain.Telephone}}</button></a>{{end}}
							</div>
						</div>
                    </div>
                </div>
                {{end}}
            </div>
        </div>
    </div>
    {{template "footer" .}}{{end}}