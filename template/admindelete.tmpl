{{define "admindelete"}}{{template "adminheader" .}}
<style>
    .formsy {
        list-style-type: none;
    }
    
    span {
        display: block;
        font-size: 14px;
        text-indent: 5px;
    }
    
    label {
        font-size: 16px;
    }
</style>
</head>

<body>
    <div id="cont" class="units-container bckgrnd">
        {{template "admintop" .}}



        <div id="main" class="units-row end" style="padding-top:30px;">
            <div class="unit-centered unit-80 bckgrnd5" style="padding:15px 20px;">
                <div class="units-row end">
                    <nav class="breadcrumbs">
                        <ul>
                            <li><a href="/admin">Panel administracyjny</a>
                            </li>
                            <li><span>Usuń{{if eq .actionname "post"}} post {{else if eq .actionname "postincategory"}} link do postu w kategorii {{else if eq .actionname "category"}} kategorie {{else if eq .actionname "subscription"}} subskrypcje {{else if eq .actionname "announcement"}} ogłoszenie {{else}} //brakujaca nazwa// {{end}}</span>
                            </li>
                        </ul>
                    </nav>
                </div>
                <div class="unit-row">
                    <div class="unit-100">


                        {{if .Error}} Wystąpił błąd: {{.Error}}
                        <br />{{end}}


                        <form method="post" action="/admin/form/delete/{{.actionname}}/{{.actionid}}" class="forms">
                            <ul class="formsy">
                                Usuwasz <strong>{{if eq .actionname "post"}} post {{else if eq .actionname "postincategory"}} link do postu w kategorii {{else if eq .actionname "category"}} kategorie {{else if eq .actionname "subscription"}} subskrypcje {{else}} //brakujaca nazwa// {{end}}</strong> o <strong>id {{.actionid}}</strong>:
                                <input type="hidden" name="Id" value="{{.actionid}}">
                                <li>
                                    <label>
                                        <input type="checkbox" name="Accept" /> Potwierdzam, że jestem świadomy tego co chcę usunąć.</label>
                                </li>
                            </ul>

                            <p>
                                <input class="btn btn-blue" type="submit" value="Zatwierdź" />
                            </p>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
    {{template "adminfooter" .}} {{end}}