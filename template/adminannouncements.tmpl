{{define "adminannouncements"}}{{template "adminheader" .}}
<style>
    .formsy {
        list-style-type: none;
    }
    
    span {
        display: block;
        font-size: 14px;
        text-indent: 5px;
    }
    
    label {
        font-size: 16px;
    }
	.prol {
		text-decoration: underline;
		cursor: pointer;
	}
</style>
</head>

<body>
    <div id="cont" class="units-container bckgrnd">
        {{template "admintop" .}}



        <div id="main" class="units-row end" style="padding-top:30px;">
            <div class="unit-centered unit-80 bckgrnd5" style="padding:15px 20px;">
                <div class="units-row end">
                    <nav class="breadcrumbs">
                        <ul>
                            <li><a href="/admin">Panel administracyjny</a>
                            </li>
                            <li><span>Wyświetl ogłoszenia</span>
                            </li>
                        </ul>
                    </nav>
                </div>
                <div class="unit-row end">
                    Lista ogłoszeń
                    <table class="table-bordered">
                        <tbody>
                            <tr>
                                <td class="width-20"><strong>Tytuł</strong></td>
                                <td class="width-35"><strong>Treść</strong></td>
                                <td class="width-35"><strong>Szczegóły</strong></td>
                                <td class="width-10"></td>
                            </tr>
                            {{range .announcements}}
                            <tr>
                                <td class="width-20">{{.Title}}</td>
                                <td class="width-35">{{.Text}}</td>
                                <td class="width-35">Utworzono: <em>{{.Createdon}}</em><br/>
                                    Ostatnia edycja: <em>{{.Modifiedon}}</em><br/>
                                    Ukryte po <em>{{if eq .Hideafter 4}}nigdy{{else if eq .Hideafter 3}}4 tygodniach{{else if eq .Hideafter 2}}3 tygodniach{{else if .Hideafter}}2 tygodniach{{else}}tygodniu{{end}}</em>
									<br/>
                                                    Widoczny <strong>{{if .Visible}}TAK{{else}}NIE{{end}}</strong>                
                                </td>
                                <td class="width-10"><a href="/li1/{{.Id}}" target="_blank">Zobacz</a><br/>
									{{if ne .Hideafter 4}}<a class="prol" data-id="{{.Id}}">Przedłuż</a><br/>{{end}}
                                                    <a href="/admin/form/editannouncement/{{.Id}}" target="_blank">Edytuj</a><br/>
                                                    <a href="/admin/form/delete/announcement/{{.Id}}" target="_blank">Usuń</a>
                                
                                </td>
                            </tr>{{end}}
                        </tbody>
                    </table>
                    
                </div>
            </div>
        </div>
    </div>
	<script>
		var id;
		$('.prol').click(function(){
			id = $(this).attr('data-id');
			$.ajax({
				url: '/admin/renewannounement/' + id,
			}).done(function(data){
				location.reload();
				history.go(0);
			});
		});
	</script>
	{{template "adminfooter" .}}{{end}}